{
  "name": "@crlfe.ca/pumpkin",
  "version": "0.1.2",
  "private": true,
  "description": "Minimalist DOM/JSX rendering and effect/signal library for reactive web apps",
  "homepage": "https://github.com/crlfe/pumpkin",
  "license": "MIT",
  "author": "Chris Wolfe (https://crlfe.ca/)",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && rollup --config rollup.config.mts --configPlugin @rollup/plugin-swc && tsc -p tsconfig.build.json",
    "lint": "eslint . && prettier -c .",
    "test": "vitest",
    "test-coverage": "vitest --coverage",
    "test-typecheck": "vitest --typecheck"
  },
  "packageManager": "pnpm@9.15.3+sha512.1f79bc245a66eb0b07c5d4d83131240774642caaa86ef7d0434ab47c0d16f66b04e21e0c086eb61e62c77efc4d7f7ec071afad3796af64892fae66509173893a",
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@rollup/plugin-swc": "^0.4.0",
    "@vitest/coverage-istanbul": "^2.1.8",
    "eslint": "^9.18.0",
    "jsdom": "^26.0.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.30.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.1",
    "vitest": "^2.1.8"
  }
}
